{
  "name": "cryptopay",
  "version": "1.0.0",
  "description": "Cryptopay is a payment gateway and business wallet that allows merchants to automate the processes of accepting cryptocurrency payments and payouts from their customers, as well as making currency exchange transactions and receiving data on the transaction history and account balance statuses for reporting.",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node dist/src/index.js",
    "start:dev": "tsc -w && nodemon dist/src/index.js",
    "build": "tsc",
    "test": "jest --clearCache && jest",
    "test:dev:path": "jest -- $npm_config_testpath",
    "lint": "eslint . --ext .ts ",
    "lint:fix": "eslint src/*.ts --fix "
  },
  "keywords": [],
  "author": "Muchnik Illia",
  "license": "ISC",
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "install": "^0.13.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "npm": "^8.1.4",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.0-next.12",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0"
  },
  "lint-staged": {
    "**/*.ts": [
      "node_modules/.bin/eslint --max-warnings=0",
      "eslint src/**/*.ts"
    ]
  }
}
